<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/quran"
    tools:context=".Refrel">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Easy Quran"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="46sp"
        android:textStyle="bold"
        app:fontFamily="cursive" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        >


        <TextView

            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Enter Referral Code "
            android:textColor="#fff"
            android:textSize="24sp" />



        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:inputType="text"
            android:textColor="#000"
            android:hint="Enter Referral code here!"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            />







        <Button
            android:id="@+id/btn_sbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreenstyle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"

            android:gravity="center"
            android:textAlignment="center"
            android:padding="14dp"
            android:text="Submit"
            android:textSize="16dp"
            android:textColor="#fff" />




    </LinearLayout>


</LinearLayout>
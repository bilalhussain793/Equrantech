<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quran"
    android:scaleType="centerCrop"
    tools:context=".Home">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:background="#5EFFFFFF"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="15"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/pass"
                    android:layout_gravity="right"
                    android:id="@+id/profileImage"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="12">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:textColor="#fff"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="10dp"
                    android:textColor="#fff"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userId"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textSize="10dp"
                    android:textColor="#fff"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#fff"></LinearLayout>


            </LinearLayout>

            <Button
                android:background="@drawable/logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/logoutBtn"
                android:textColor="#fff"
                android:backgroundTint="#fff"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:padding="20dp">


            <Button
                android:id="@+id/btn_practice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:background="@color/colorAccent"
                android:text="Practice Quran!"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_mins"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_dark"
                android:text="Get More Minutes!"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/submins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="0 remaining minutes"
                android:textAlignment="center"
                android:textColor="#ffff"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/info"
                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
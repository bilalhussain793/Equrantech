<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/quran"
    tools:context=".FreeMins">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Easy Quran"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="46sp"
        android:textStyle="bold"
        app:fontFamily="cursive" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:background="@drawable/layout_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        >


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Share Easy Quran and Get More Minutes! "
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/cb_improve"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your friend will get 10 minutes to check out easy quran when they sign up. You,ll get 5 minutes for every friend who completed their free trail, and you,ll recieve 60 when they subscribe! if you refer enough friends. you can use easy quran for free!"
            android:padding="10dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="text"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:drawableRight="@drawable/copy"
            android:drawablePadding="16dp" />







        <Button
            android:id="@+id/btn_sbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btngreenstyle"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"

            android:gravity="center"
            android:textAlignment="center"
            android:padding="14dp"
            android:text="Share easy QUran"
            android:textSize="16dp"
            android:textColor="#fff" />




    </LinearLayout>

</LinearLayout>